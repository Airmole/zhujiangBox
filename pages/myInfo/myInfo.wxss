/* pages/myInfo/myInfo.wxss */
@import "../common/weui.wxss";

Page {
  background-color: #7acfa6;
}

.GreenBG {
  background-color: #7acfa6;
}

.Tcontainer {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.ykt-card {
  display: flex;
  flex-direction: column;
  height: 370rpx;
  margin: 30rpx 50rpx 45rpx;
  background: #73b4ef;
  border-radius: 15rpx;
  box-shadow: 5rpx 5rpx 15rpx #ccc;
}

.ykt-black-line {
  width: 100%;
  height: 80rpx;
  margin: 40rpx 0 0;
  background: #7b7b7b;
}

.ykt-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ykt-ye {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-right: 50rpx;
  padding-top: 25rpx;
  color: #ddd;
}

.ykt-ye-name {
  font-size: 11pt;
  line-height: 50rpx;
  padding-left: 30rpx;
}

.ykt-ye-money {
  text-align: center;
  font-size: 10pt;
}

.ykt-ye-value {
  color: #fff;
  font-size: 36pt;
  font-weight: bold;
  line-height: 80rpx;
  padding-right: 25rpx;
}

.ykt-img {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
}

.ykt-img image {
  width: 125rpx;
  height: 125rpx;
  padding: 20rpx 30rpx;
}

.ykt-card-more {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin: 5rpx 25rpx 10rpx 25rpx;
  line-height: 100%;
  opacity: 0.6;
}

.ykt-ye-time {
  font-size: 9pt;
}

.ykt-ye-id {
  font-size: 10pt;
}

/* canvas */

.grid-remind {
  padding-left: 40rpx;
  color: #999;
  margin-bottom: 25rpx;
}

